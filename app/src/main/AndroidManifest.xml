<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.apptrail_v2">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.AppTrail_v2">
        <activity android:name=".CalcolatriceActivity2"></activity>
        <activity
            android:name=".CalcolatriceActivity"
            android:theme="@style/Theme.AppCompat.NoActionBar"> <!-- //elimino la ActionBar -->
        </activity>
        <activity
            android:name=".GuidaActivity"
            android:theme="@style/Theme.AppCompat.NoActionBar"> <!-- //elimino la ActionBar -->
        </activity>
        <activity
            android:name=".MainActivity"
            android:theme="@style/Theme.AppCompat.NoActionBar"> <!-- //elimino la ActionBar -->
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
        <activity
            android:name=".SplashScreen"
            android:theme="@style/Theme.AppCompat.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" /> <!-- //elimino la ActionBar -->
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>